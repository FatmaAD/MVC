@model EmployeeViewModel
@{
    ViewBag.Title = "Details";
}

<h2>Employee Details</h2>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
            <td>Department</td>
            <th>Salary</th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Employee.Name</td>
            <td>@Model.Employee.Age</td>
            <td>@Model.Employee.Gender</td>
            <td>@Model.Employee.Department.Name</td>
            <td>@Model.Employee.Salary</td>
        </tr>
    </tbody>
</table>

<a href="/employee/index" class="btn btn-primary">Back To List</a>

