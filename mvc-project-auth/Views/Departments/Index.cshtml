@model List<Department>
@{
    ViewBag.Title = "Departments";
}

<h2>Departments</h2>

<br />
<br />

<a class="btn btn-primary" href="/department/add">
    <span class="glyphicon glyphicon-plus"> Add Department </span>
</a>

<br />
<br />
<br />


@{
    if (Model == null || Model.Count == 0)
    {
        <h3>No Departments Found</h3>
    }
    else
    {
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (Department dep in Model)
                {
                    <tr id="@dep.Id">
                        <td>@dep.Name</td>
                        <td>
                            @Html.Partial("_partialControls", dep.Id)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
}

@section scripts
    {
    <script src="~/scripts/SiteScripts/onDelete.js"></script>
}






