@model Department
@{
    ViewBag.Title = "Details";
}

<h2>Department Details</h2>


<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Employees</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Name</td>
            <td>@Html.DropDownListFor(d => d.Employees,
            new SelectList(Model.Employees, "Id", "Name"),
            new { @class = "form-control" })</td>
        </tr>
    </tbody>
</table>


<a href="/Department/index" class="btn btn-success">Back To List</a>