@model EmployeeViewModel
@{
    ViewBag.Title = "Index";
}

<br />
<br />

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
    <span class="glyphicon glyphicon-plus"> Add Product </span>
</button>

<br />
<br />
<br />


@{
    if (Model.Employees == null || Model.Employees.Count == 0)
    {
        <h3>No Employees Found</h3>
    }
    else
    {
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <td>Department</td>
                    <th>Salary</th>

                </tr>
            </thead>
            <tbody id="empData">

                @foreach (Employee emp in Model.Employees)
                {
                    <tr id="@emp.Id">
                        <td>@emp.Name</td>
                        <td>@emp.Age</td>
                        <td>@emp.Gender</td>
                        <td>@emp.Department.Name</td>
                        <td>@emp.Salary</td>
                        <td>
                            @Html.Partial("_partialControls", emp.Id)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
}

@section scripts
{  
    <script src="~/scripts/SiteScripts/onDelete.js"></script>
    <script>
        function AddRow()
            {
                $("#exampleModalCenter").modal('hide');
                document.getElementById("form0").reset();
            }
    </script>  
}

